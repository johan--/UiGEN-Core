            "enum":[
                "1",
                "5",
                "10",
                "15"
            ]         
        }, 
        "patient_no":{
            "title":"Numer pacjenta",
            "description":"Description....",
            "type": "string",
            "required": true
                
        },
         "doctor":{
            "title":"Lekarz",
            "description":"Description....",
            "type": "radio",
            "default":"1",
            "required": true,
            "enum":[
                "1",
                "5",
                "10",
                "15"
            ]         
        }, 
        "visit_data":{
            "title":"data wizyty",
