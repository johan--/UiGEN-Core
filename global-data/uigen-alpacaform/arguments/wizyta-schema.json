            "type": "string",
            "required": true
                
        },     
        "supports": {
            "title": "Supports",
            "description":"An alias for calling add_post_type_support() directly. As of 3.5, boolean false can be passed as value instead of an array to prevent default (title and editor) behavior.",
            "type": "array", 
            "items": {
                "type": "object",
                "properties": {
                    "cell_name": {                        
